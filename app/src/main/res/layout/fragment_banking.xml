<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Banking">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#160E1D">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="false"
            android:background="@drawable/gg"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Chuyển tiền trong THBank"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView13"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:text="CHUYỂN TIỀN ĐẾN"
            android:textColor="#ffffffff"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView26"
            android:layout_marginTop="16dp"
            android:background="#23172B"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="#534A5D"
                app:cardCornerRadius="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#7D35BB"
                        app:cardCornerRadius="22dp"
                        app:contentPaddingBottom="8dp"
                        app:contentPaddingTop="8dp">
                        >

                        <TextView
                            android:id="@+id/textView27fsd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="TRong TPBank"
                            android:textColor="#ffffffff" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:contentPaddingBottom="8dp"
                        app:contentPaddingTop="8dp">>

                        <TextView
                            android:id="@+id/textView2agag7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Liên Ngân Hàng"
                            android:textColor="#ffffffff" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:contentPaddingBottom="8dp"
                        app:contentPaddingTop="8dp">>

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Qua Thẻ ATM"
                            android:textColor="#ffffffff" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/borderwhite"
                app:cardBackgroundColor="#23172B">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/borderwhitesmall"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp">

                    <EditText
                        android:id="@+id/stk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Số tài khoản hoặc số điện thoại"
                        android:inputType="textPersonName"
                        android:textColor="#808080"
                        android:textColorHighlight="#808080"
                        android:textColorHint="#808080" />

                    <ImageView
                        android:id="@+id/imageView21cva"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/network" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/borderwhite"
                app:cardBackgroundColor="#23172B">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/borderwhitesmall"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp">

                    <EditText
                        android:id="@+id/moneybanktransfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Số tiền"
                        android:inputType="textPersonName"
                        android:textColor="#808080"
                        android:textColorHighlight="#808080"
                        android:textColorHint="#808080" />

                    <ImageView
                        android:id="@+id/imageViafagew21"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/info" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/borderwhite"
                app:cardBackgroundColor="#23172B">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/borderwhitesmall"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp">

                    <EditText
                        android:id="@+id/infoBanking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Nội dung chuyển tiền"
                        android:inputType="textPersonName"
                        android:textColor="#808080"
                        android:textColorHighlight="#808080"
                        android:textColorHint="#808080" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/heart" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnBanking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="#534A5D"
                app:cardCornerRadius="8dp"
                app:contentPaddingBottom="16dp"
                app:contentPaddingTop="16dp">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CHUYỂN TIỀN"
                    android:textColor="#e6e6e6"
                    android:textSize="18dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>